<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <LinearLayout
        android:id="@+id/category_root"
        android:layout_width="match_parent"
        android:layout_height="272dp"
        android:paddingStart="@dimen/default_minor_margin"
        android:paddingEnd="0dp"
        android:paddingBottom="@dimen/default_minor_margin"
        android:background="@color/white"
        android:orientation="vertical">

        <TextView
            android:id="@+id/txt_category_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="2dp"
            android:layout_marginBottom="@dimen/default_minor_margin"
            tools:text="Popular"/>

        <android.support.v7.widget.RecyclerView
            android:id="@+id/recycler_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            tools:visibility="gone"/>

        <ProgressBar
            android:id="@+id/loading"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:visibility="gone"
            tools:visibility="visible"/>

        <TextView
            android:id="@+id/txt_error_view"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:text="Erro ao carregar, clique para tentar novamente"
            android:visibility="gone"
            tools:visibility="visible"
            android:drawableTop="@drawable/ic_refresh"
            />

    </LinearLayout>

</layout>