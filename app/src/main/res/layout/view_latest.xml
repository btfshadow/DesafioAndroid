<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="obj"
            type="br.com.concretesolutions.desafioandroid.viewmodel.LatestMovieViewModel" />
    </data>

    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@android:color/white">

        <android.support.constraint.Guideline
            android:id="@+id/guide_latest_image"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintGuide_percent="0.66" />

        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toLeftOf="@+id/guide_latest_image"
            app:layout_constraintTop_toTopOf="parent">

            <ImageView
                android:id="@+id/img_latest"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:contentDescription="@string/cd_latest_image"
                android:src="@{obj.imageUrl}"
                tools:background="@color/colorAccent" />

            <TextView
                android:id="@+id/txt_latest_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/default_minor_margin"
                android:layout_marginTop="@dimen/default_minor_margin"
                android:text="@{obj.title()}"
                android:textColor="@android:color/white"
                android:textSize="16sp"
                tools:text="Piratas do Caribe" />

            <TextView
                android:id="@+id/txt_latest_language"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignStart="@id/txt_latest_title"
                android:layout_below="@+id/txt_latest_title"
                android:layout_marginTop="4dp"
                android:text="@{obj.language()}"
                android:textColor="@android:color/white"
                android:textSize="12sp"
                tools:text="Português Brasileiro" />

        </RelativeLayout>


        <TextView
            android:id="@+id/txt_latest_overview"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:text="@{obj.overview()}"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toRightOf="@+id/guide_latest_image"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:text="O Capitão Jack, que anda passando por uma onda de azar, sente os ventos da má sorte soprando com muita força quando os marinheiros fantasmas assassinos, liderados pelo aterrorizante Capitão Salazar (Javier Bardem), escapam do triângulo do diabo decididos a matar todos os piratas em seu caminho, especialmente Jack." />

    </android.support.constraint.ConstraintLayout>

</layout>