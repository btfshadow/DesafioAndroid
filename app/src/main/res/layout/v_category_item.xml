<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>
        <variable
            name="obj"
            type="br.com.concretesolutions.desafioandroid.viewmodel.CategoryViewModel"/>
    </data>

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/default_minor_margin"
        card_view:cardCornerRadius="0dp"
        card_view:cardElevation="4dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/txt_category_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/default_minor_margin"
                android:layout_marginStart="12dp"
                android:textAllCaps="true"
                android:layout_marginTop="@dimen/dimen_4dp"
                android:text="@{obj.categoryName}"
                tools:text="Popular" />

            <br.com.concretesolutions.desafioandroid.ui.view.MediaHorizontalItemView
                android:id="@+id/media_horizontal_list"
                android:layout_width="match_parent"
                android:layout_height="250dp" />
        </LinearLayout>

    </android.support.v7.widget.CardView>

</layout>