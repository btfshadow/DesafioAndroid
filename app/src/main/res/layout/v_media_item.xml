<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <import type="android.text.TextUtils"/>

        <variable
            name="obj"
            type="br.com.concretesolutions.desafioandroid.viewmodel.MediaItemViewModel" />
    </data>

    <LinearLayout
        android:id="@+id/media_item_root"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/img_media_item_poster"
            android:layout_width="128dp"
            android:layout_height="192dp"
            android:layout_marginBottom="4dp"
            android:contentDescription="@string/cd_media_poster"
            android:src="@{obj.poster}"
            tools:src="@drawable/ic_image_placeholder"/>

        <TextView
            android:id="@+id/txt_media_item_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="4dp"
            android:text="@{TextUtils.isEmpty(obj.title) ? @string/media_item_no_title : obj.title}"
            android:lines="1"
            android:ellipsize="end"
            android:maxLines="1"
            android:maxWidth="128dp"
            android:textColor="@android:color/black"
            tools:text="Pirates of Caribbean" />

        <TextView
            android:id="@+id/txt_media_item_rating"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@{TextUtils.isEmpty(obj.rating) ? @string/media_item_no_rating : @string/media_item_rating(obj.rating, obj.rating)}"
            tools:text="Ratings: 8.0" />

    </LinearLayout>

</layout>