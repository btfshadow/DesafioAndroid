<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <data>
        <variable
            name="viewModel"
            type="br.com.concretesolutions.desafioandroid.viewmodel.MovieItemViewModel" />
    </data>

    <LinearLayout
        android:id="@+id/movie_item_root"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@android:color/white"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/img_movie_item_poster"
            android:layout_width="128dp"
            android:layout_height="192dp"
            android:layout_marginBottom="4dp"
            android:scaleType="fitXY"
            android:contentDescription="@string/cd_movie_poster"
            android:src="@{viewModel.poster}" />

        <TextView
            android:id="@+id/txt_movie_item_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="4dp"
            android:text="@{viewModel.title}"
            android:textColor="@android:color/black"
            tools:text="Pirates of Caribbean" />

        <TextView
            android:id="@+id/txt_movie_item_rating"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="4dp"
            android:text="@{viewModel.getRating(context)}"
            tools:text="Ratings: 8.0" />

    </LinearLayout>

</layout>