<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="Theme.Desafio" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="windowContentTransitions">true</item>
    </style>

    <style name="Theme.Desafio.MediaDetails">
        <item name="android:windowTranslucentStatus">true</item>
    </style>

    <style name="Theme.Desafio.LoadingFragment" parent="@style/Theme.Desafio">
        <item name="android:windowFrame">@android:color/transparent</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowIsFloating">false</item>
        <item name="android:windowContentOverlay">@android:color/transparent</item>
        <item name="android:windowNoTitle">false</item>
    </style>

    <style name="Theme.Desafio.Rating" >
        <item name="colorAccent">@color/colorAccent</item>
    </style>

</resources>